{
  "name": "home",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --outDir ../_site",
    "preview": "vite preview --outDir ../_site",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "npm run lint:js && npm run lint:theme",
    "lint:js": "eslint \"src/**/*.{js,jsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx}\" --fix",
    "lint:theme": "node ./scripts/lint-theme.cjs",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,md}\"",
    "validate": "npm run lint && npm run lint:css && npm run format:check && npm test -- --run",
    "prepare": "husky install"
  },
  "dependencies": {
    "lucide-react": "^0.548.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^4.0.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "vite": "^6.3.5",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "jsxSingleQuote": false,
    "quoteProps": "as-needed",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false,
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "singleQuote": false,
          "printWidth": 100
        }
      },
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always",
          "printWidth": 80
        }
      },
      {
        "files": [
          "*.json",
          "*.jsonc"
        ],
        "options": {
          "printWidth": 100,
          "trailingComma": "none"
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "ignoreFiles": [
      "node_modules/**",
      "dist/**",
      "_site/**",
      "build/**",
      "**/*.min.css"
    ],
    "rules": {
      "order/properties-alphabetical-order": true,
      "keyframes-name-pattern": null,
      "selector-class-pattern": null,
      "custom-property-pattern": null,
      "selector-id-pattern": null,
      "selector-pseudo-class-no-unknown": null,
      "property-no-deprecated": [
        true,
        {
          "severity": "warning"
        }
      ],
      "no-duplicate-selectors": null,
      "no-descending-specificity": null,
      "color-no-invalid-hex": true,
      "font-family-no-duplicate-names": true,
      "font-family-no-missing-generic-family-keyword": true,
      "function-calc-no-unspaced-operator": true,
      "function-linear-gradient-no-nonstandard-direction": true,
      "string-no-newline": true,
      "unit-no-unknown": true,
      "property-no-unknown": true,
      "keyframe-declaration-no-important": true,
      "declaration-block-no-duplicate-properties": [
        true,
        {
          "ignore": [
            "consecutive-duplicates-with-different-values"
          ]
        }
      ],
      "declaration-block-no-shorthand-property-overrides": true,
      "block-no-empty": true,
      "selector-pseudo-element-no-unknown": true,
      "selector-type-no-unknown": true,
      "media-feature-name-no-unknown": true,
      "at-rule-no-unknown": true,
      "comment-no-empty": true,
      "no-empty-source": true,
      "no-invalid-double-slash-comments": true,
      "alpha-value-notation": "number",
      "color-function-notation": "modern",
      "color-hex-length": "short",
      "font-weight-notation": "numeric",
      "value-keyword-case": "lower",
      "function-name-case": "lower",
      "selector-type-case": "lower",
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ]
    }
  }
}
